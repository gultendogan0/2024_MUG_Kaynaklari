<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/okulNoEditText"
        app:layout_constraintStart_toStartOf="@+id/okulNoEditText"
        app:layout_constraintTop_toBottomOf="@+id/okulNoEditText" />

    <EditText
        android:id="@+id/bolumEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Bölüm..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/okulNoEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Okul No..."
        app:layout_constraintEnd_toEndOf="@+id/bolumEditText"
        app:layout_constraintStart_toStartOf="@+id/bolumEditText"
        app:layout_constraintTop_toBottomOf="@+id/bolumEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>