<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/yasEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Yaşınızı girin !"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yasTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="GİRİLEN YAŞ: "
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/yasEditText"
        app:layout_constraintStart_toStartOf="@+id/yasEditText"
        app:layout_constraintTop_toBottomOf="@+id/yasEditText" />

    <Button
        android:id="@+id/kaydetButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Kaydet"
        android:backgroundTint="#4CAF50"
        app:layout_constraintStart_toStartOf="@+id/yasEditText"
        app:layout_constraintTop_toBottomOf="@+id/yasTextView" />

    <Button
        android:id="@+id/silButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Sil"
        android:backgroundTint="#F44336"
        app:layout_constraintEnd_toEndOf="@+id/yasEditText"
        app:layout_constraintTop_toBottomOf="@+id/yasTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>